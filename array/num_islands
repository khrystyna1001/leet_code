class Solution:
    def numIslands(self, grid: List[List[str]]) -> int:
        if not grid:
            return 0
        
        rows, cols = len(grid), len(grid[0])
        island_count = 0
        
        def dfs(r, c):
            # 1. Base Case: Out of bounds or hitting water ('0')
            if r < 0 or c < 0 or r >= rows or c >= cols or grid[r][c] == '0':
                return
            
            # 2. "Sink" the land to mark it as visited
            grid[r][c] = '0'
            
            # 3. Visit all 4 neighbors (up, down, left, right)
            dfs(r + 1, c)
            dfs(r - 1, c)
            dfs(r, c + 1)
            dfs(r, c - 1)
            
        for r in range(rows):
            for c in range(cols):
                if grid[r][c] == '1':
                    # We found a new island!
                    island_count += 1
                    # Now sink all connected parts of this island
                    dfs(r, c)
                    
        return island_count
