class Solution:
    def increasingTriplet(self, nums: List[int]) -> bool:
        first = float('inf')
        second = float('inf')
        
        for n in nums:
            if n <= first:
                # Found a new potential start
                first = n
            elif n <= second:
                # Found a middle value greater than 'first'
                second = n
            else:
                # Found a value greater than both 'first' and 'second'!
                return True
                
        return False
