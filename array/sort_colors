class Solution:
    def sortColors(self, nums: List[int]) -> None:
        """
        Do not return anything, modify nums in-place instead.
        """
        low = 0
        mid = 0
        high = len(nums) - 1
        
        while mid <= high:
            if nums[mid] == 0:
                # Found a Red: Swap it to the front (low pointer)
                nums[low], nums[mid] = nums[mid], nums[low]
                low += 1
                mid += 1
            elif nums[mid] == 1:
                # Found a White: Already in the right general area, just move mid
                mid += 1
            else:
                # Found a Blue: Swap it to the back (high pointer)
                nums[high], nums[mid] = nums[mid], nums[high]
                # We decrement high, but DON'T increment mid yet 
                # because the new nums[mid] hasn't been inspected.
                high -= 1
