# Definition for a binary tree node.
# class TreeNode:
#     def __init__(self, val=0, left=None, right=None):
#         self.val = val
#         self.left = left
#         self.right = right
class Solution:
    def recoverTree(self, root: Optional[TreeNode]) -> None:
        """
        Do not return anything, modify root in-place instead.
        """
        self.first = None
        self.second = None
        self.prev = None
        
        def traverse(node):
            if not node:
                return
            
            # 1. Go Left
            traverse(node.left)
            
            # 2. Process Current Node (The Logic)
            if self.prev and node.val < self.prev.val:
                # If this is the first time we find a drop, 
                # the 'prev' node is the higher one that was moved left.
                if not self.first:
                    self.first = self.prev
                
                # The 'node' is the smaller one that was moved right.
                # We update 'second' every time we see a drop.
                self.second = node
            
            # Update 'prev' before moving to the next node
            self.prev = node
            
            # 3. Go Right
            traverse(node.right)
            
        traverse(root)
        self.first.val, self.second.val = self.second.val, self.first.val
