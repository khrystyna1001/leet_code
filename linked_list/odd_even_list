# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def oddEvenList(self, head: Optional[ListNode]) -> Optional[ListNode]:
        if not head:
            return None
        
        odd = head          # The first node is the 1st (odd)
        even = head.next    # The second node is the 2nd (even)
        even_head = even    # Save the start of the even list
        
        # We move through the list as long as there are even nodes to process
        while even and even.next:
            # Connect the next odd node
            odd.next = even.next
            odd = odd.next
            
            # Connect the next even node
            even.next = odd.next
            even = even.next
            
        # The critical step: Attach the even list to the end of the odd list
        odd.next = even_head
        
        return head
