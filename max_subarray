class Solution:
    def maxSubArray(self, nums: List[int]) -> int:
        max_so_far = nums[0]
        current_running_sum = 0
        
        for n in nums:
            # If our running sum is negative, it's dead weight. Reset it to 0.
            if current_running_sum < 0:
                current_running_sum = 0
            
            # Add the current number to our streak
            current_running_sum += n
            
            # Update the global maximum if this streak is the best we've seen
            max_so_far = max(max_so_far, current_running_sum)
            
        return max_so_far
