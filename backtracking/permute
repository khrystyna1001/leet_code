class Solution:
    def permute(self, nums: List[int]) -> List[List[int]]:
        res = []
        used = [False] * len(nums)
        def backtrack(path):
            # Base Case: We've used all numbers
            if len(path) == len(nums):
                # We append a COPY of path because path is modified later
                res.append(path[:]) 
                return
            for i in range(len(nums)):
                # If this number is already in our current path, skip it
                if used[i]:
                    continue
                # Action: Choose the number and mark as used
                path.append(nums[i])
                used[i] = True
                
                # Recursion: Move to the next "slot"
                backtrack(path)
                
                # Backtrack: Unmark and remove so it's available for other paths
                used[i] = False
                path.pop()
        
        backtrack([])
        return res
